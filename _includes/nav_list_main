<!--전체 글 수를 세기 위한 연산. sum 변수에 전체 글 수 저장-->

{% assign sum = site.posts | size %}
{% assign sum_life = 0 %}
{% assign sum_work = 0 %}
{% assign sum_future = 0 %}

{% for post in site.categories %}
    <!-- LIFE 카테고리 전체 카운트 설정 -->
