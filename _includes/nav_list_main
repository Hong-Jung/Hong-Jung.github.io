        {% assign sum_work = sum_work + post[1].size %}
    {% endif %}
    {% if post[0] == "web" %}
        <!--{% assign sum_work = sum_work | plus: 1 %}-->
        {% assign sum_work = sum_work + post[1].size %}
    {% endif %}
    {% if post[0] == "mobile" %}
        <!--{% assign sum_work = sum_work | plus: 1 %}-->
        {% assign sum_work = sum_work + post[1].size %}
    {% endif %}
    {% if post[0] == "technology" %}
        <!--{% assign sum_work = sum_work | plus: 1 %}-->
        {% assign sum_work = sum_work + post[1].size %}
    {% endif %}
    

    <!-- FUTURE 카테고리 전체 카운트 설정 -->
    {% if post[0] == "Framework-Pattern" %}
        <!--{% assign sum_future = sum_future | plus: 1 %}-->
        {% assign sum_future = sum_future + post[1].size %}
    {% endif %}
    {% if post[0] == "Maru-Project" %}
        <!--{% assign sum_future = sum_future | plus: 1 %}-->
        {% assign sum_future = sum_future + post[1].size %}
    {% endif %}
    {% if post[0] == "Bloom-Project" %}
        <!--{% assign sum_future = sum_future | plus: 1 %}-->
        {% assign sum_future = sum_future + post[1].size %}
    {% endif %}
    {% if post[0] == "Logistics-Project" %}
        <!--{% assign sum_future = sum_future | plus: 1 %}-->
        {% assign sum_future = sum_future + post[1].size %}
    {% endif %}
{% endfor %}

